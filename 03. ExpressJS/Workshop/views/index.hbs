<h1>Home</h1>
<form action="/" method="GET">
    <input type="text" class="search" name="search" placeholder="Search..." value="{{query.search}}">
    <input type="number" name="from" class="difficulty" placeholder="Difficulty from..." value="{{query.from}}">
    <span>-</span>
    <input type="number" name="to" class="difficulty" placeholder="Difficulty to..." value="{{query.to}}">
    <input type="submit" value="search">
</form>

{{#each cubes}}
<div class="cube">
    <img class="cube" src="{{imageUrl}}" alt="">
    <p class="name">{{name}}</p>
    <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
    <a class="btn" href="/details/{{id}}">Details</a>
</div>
{{else}}
    <span> No Cubes in database. </span>
{{/each}}