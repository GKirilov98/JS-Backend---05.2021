<main>
    <div class="container">

        <section class="details">
            <h1>Theater title: {{play.title}}</h1>
            <div>
                <img src="{{play.imageUrl}}" alt=""/>
            </div>
        </section>

        <section class="details">
            <h3>Theater Description</h3>
            <p>{{play.description}}</p>
            <div class="buttons">
                {{#if isOwner}}
                    <a class="btn delete" href="/theaters/delete/{{play._id}}">Delete</a>
                    <a class="btn edit" href="/theaters/edit/{{play._id}}">Edit</a>
                {{/if}}

                {{#if isLiked}}
                    <span class="liked">You have already liked this play!</span>
                {{else}}
                    <a class="btn like" href="/theaters/like/{{play._id}}">Like</a>
                {{/if}}
            </div>
        </section>
    </div>
</main>