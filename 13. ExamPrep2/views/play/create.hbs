<main>
    <form class="theater-form" action="" method="post">
        <h1>Create Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" placeholder="Theater name" id="title" name="title"  value="{{data.title}}" />
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea placeholder="Description" id="description" name="description" >{{data.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" placeholder="Image Url" id="imageUrl" name="imageUrl" value="{{data.imageUrl}}">
        </div>
        <div class="check">
            <input type="checkbox" id="isPublic" name="isPublic" value="{{data.isPublic}}">
                <label for="isPublic">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>